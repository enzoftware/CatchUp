<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ArticleActivity"
    tools:showIn="@layout/activity_article">

    <com.androidnetworking.widget.ANImageView
        android:id="@+id/pictureImageViewArticle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_image_size"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/titleTextViewArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/pictureImageViewArticle"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="@string/mock_text"/>

    <TextView
        android:id="@+id/descriptionTextViewArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/titleTextViewArticle"
        android:text="@string/mock_text"/>

    <TextView
        android:id="@+id/contentTextViewArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextViewArticle"
        android:text="@string/mock_text"/>

</android.support.constraint.ConstraintLayout>